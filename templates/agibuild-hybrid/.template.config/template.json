{
  "$schema": "http://json.schemastore.org/template",
  "author": "Agibuild",
  "classifications": ["Desktop", "Mobile", "Hybrid", "Avalonia", "WebView"],
  "identity": "Agibuild.Fulora.HybridTemplate",
  "name": "Agibuild Hybrid App",
  "shortName": "agibuild-hybrid",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "preferNameDirectory": true,
  "sourceName": "HybridApp",
  "symbols": {
    "framework": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Frontend framework to scaffold",
      "defaultValue": "vanilla",
      "choices": [
        { "choice": "vanilla", "description": "Plain HTML/JS (no build tools)" },
        { "choice": "react", "description": "React with Vite" },
        { "choice": "vue", "description": "Vue with Vite" }
      ]
    },
    "shellPreset": {
      "type": "parameter",
      "datatype": "choice",
      "description": "Desktop shell wiring preset",
      "defaultValue": "app-shell",
      "choices": [
        { "choice": "baseline", "description": "Minimal startup wiring without shell orchestration presets" },
        { "choice": "app-shell", "description": "Starter shell wiring with policy/session profile bootstrap" }
      ]
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(framework == 'react')",
          "exclude": ["HybridApp.Web.Vanilla/**", "HybridApp.Web.Vite.Vue/**"]
        },
        {
          "condition": "(framework == 'vue')",
          "exclude": ["HybridApp.Web.Vanilla/**", "HybridApp.Web.Vite.React/**"]
        },
        {
          "condition": "(framework == 'vanilla')",
          "exclude": ["HybridApp.Web.Vite.React/**", "HybridApp.Web.Vite.Vue/**"]
        },
        {
          "condition": "(shellPreset == 'baseline')",
          "exclude": ["HybridApp.Desktop/MainWindow.AppShellPreset.cs"]
        }
      ]
    }
  ]
}
