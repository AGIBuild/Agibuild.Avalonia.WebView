<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Agibuild.Avalonia.WebView.Integration.Tests.ViewModels"
             mc:Ignorable="d"
             x:Class="Agibuild.Avalonia.WebView.Integration.Tests.Views.WebViewTestView"
             x:DataType="vm:WebViewTestViewModel"
             Background="{StaticResource SurfaceBgBrush}">

  <DockPanel>

    <!-- ════════════ Header ════════════ -->
    <Border DockPanel.Dock="Top" Background="White"
            BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderDefaultBrush}"
            Padding="16,12">
      <StackPanel Spacing="2">
        <TextBlock Text="&#x1F9EA; WebView Functional Tests" Classes="heading" />
        <TextBlock Text="Mock adapter — Navigate, HTML, Script" Classes="caption" />
      </StackPanel>
    </Border>

    <!-- ════════════ Scrollable Content ════════════ -->
    <ScrollViewer Padding="12">
      <StackPanel Spacing="12" MaxWidth="560">

        <!-- URL Navigation -->
        <Border Classes="card">
          <StackPanel Spacing="8">
            <TextBlock Text="URL Navigation" Classes="subheading" />
            <TextBlock Text="Navigate the WebView to a given URL" Classes="caption" />
            <Border CornerRadius="8" BorderThickness="1"
                    BorderBrush="{StaticResource BorderDefaultBrush}"
                    Background="#F8FAFC" Padding="0">
              <TextBox x:Name="AddressTextBox"
                       Text="{Binding Address}"
                       Watermark="&#x1F310;  https://example.com"
                       FontSize="13" Padding="10,8"
                       Background="Transparent" BorderThickness="0"
                       CornerRadius="8" />
            </Border>
            <Button x:Name="NavigateButton" Classes="primary"
                    Content="&#x27A1; Navigate"
                    Command="{Binding NavigateCommand}"
                    HorizontalAlignment="Right" FontSize="12" />
          </StackPanel>
        </Border>

        <!-- Load HTML -->
        <Border Classes="card" BorderBrush="{StaticResource BrandAccentBrush}">
          <StackPanel Spacing="8">
            <TextBlock Text="Load HTML" Classes="subheading" />
            <TextBlock Text="Inject raw HTML content into the WebView" Classes="caption" />
            <TextBox x:Name="HtmlTextBox" Classes="mono"
                     Text="{Binding HtmlContent}"
                     Watermark="&lt;html&gt;&lt;body&gt;Hello&lt;/body&gt;&lt;/html&gt;"
                     AcceptsReturn="True" MinHeight="72"
                     Background="#F8FAFC" />
            <Button x:Name="NavigateHtmlButton" Classes="primary"
                    Content="&#x1F4C4; Load HTML"
                    Command="{Binding NavigateHtmlCommand}"
                    HorizontalAlignment="Right" FontSize="12" />
          </StackPanel>
        </Border>

        <!-- Execute Script -->
        <Border Classes="card" BorderBrush="{StaticResource BrandSuccessBrush}">
          <StackPanel Spacing="8">
            <TextBlock Text="Execute Script" Classes="subheading" />
            <TextBlock Text="Run JavaScript and capture the result" Classes="caption" />
            <Border CornerRadius="8" BorderThickness="1"
                    BorderBrush="{StaticResource BorderDefaultBrush}"
                    Background="#F8FAFC" Padding="0">
              <TextBox x:Name="ScriptTextBox"
                       Text="{Binding Script}"
                       Watermark="document.title"
                       FontFamily="Menlo,Consolas,monospace"
                       FontSize="13" Padding="10,8"
                       Background="Transparent" BorderThickness="0"
                       CornerRadius="8" />
            </Border>
            <Grid ColumnDefinitions="*,Auto">
              <Border Grid.Column="0" Background="#F0FDF4" CornerRadius="6"
                      Padding="8,6" VerticalAlignment="Center"
                      IsVisible="{Binding ScriptResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                <TextBlock Text="{Binding ScriptResult}"
                           FontFamily="Menlo,Consolas,monospace" FontSize="11"
                           Foreground="{StaticResource BrandSuccessBrush}"
                           TextWrapping="Wrap" />
              </Border>
              <Button x:Name="InvokeScriptButton" Grid.Column="1"
                      Classes="primary"
                      Content="&#x25B6; Run"
                      Command="{Binding InvokeScriptCommand}"
                      Margin="8,0,0,0" FontSize="12" />
            </Grid>
          </StackPanel>
        </Border>

        <!-- Results -->
        <Border Classes="card" BorderBrush="{StaticResource BrandWarningBrush}">
          <StackPanel Spacing="10">
            <TextBlock Text="Results" Classes="subheading" />

            <StackPanel Spacing="4">
              <TextBlock Text="LAST NAVIGATION" Classes="section-label" />
              <Border Background="#F8FAFC" CornerRadius="6" Padding="10,6" MinHeight="28">
                <TextBlock x:Name="LastNavigationText"
                           Text="{Binding LastNavigation}"
                           FontFamily="Menlo,Consolas,monospace" FontSize="12"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextPrimaryBrush}" />
              </Border>
            </StackPanel>

            <StackPanel Spacing="4">
              <TextBlock Text="SCRIPT RESULT" Classes="section-label" />
              <Border Background="#F0FDF4" CornerRadius="6" Padding="10,6" MinHeight="28">
                <TextBlock x:Name="ScriptResultText"
                           Text="{Binding ScriptResult}"
                           FontFamily="Menlo,Consolas,monospace" FontSize="12"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource BrandSuccessBrush}" />
              </Border>
            </StackPanel>

            <StackPanel Spacing="4">
              <TextBlock Text="LAST EVENT" Classes="section-label" />
              <Border Background="#FFF7ED" CornerRadius="6" Padding="10,6" MinHeight="28">
                <TextBlock x:Name="LastEventText"
                           Text="{Binding LastEvent}"
                           FontFamily="Menlo,Consolas,monospace" FontSize="12"
                           TextWrapping="Wrap"
                           Foreground="#9A3412" />
              </Border>
            </StackPanel>
          </StackPanel>
        </Border>

      </StackPanel>
    </ScrollViewer>
  </DockPanel>
</UserControl>
