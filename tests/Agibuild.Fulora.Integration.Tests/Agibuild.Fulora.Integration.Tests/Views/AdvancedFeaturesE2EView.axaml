<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Agibuild.Fulora.Integration.Tests.ViewModels"
             xmlns:agw="using:Agibuild.Fulora"
             mc:Ignorable="d"
             x:Class="Agibuild.Fulora.Integration.Tests.Views.AdvancedFeaturesE2EView"
             x:DataType="vm:AdvancedFeaturesE2EViewModel"
             Background="{StaticResource SurfaceBgBrush}">

  <DockPanel>

    <!-- ════════════ Top Toolbar ════════════ -->
    <Border DockPanel.Dock="Top" Background="White"
            BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderDefaultBrush}"
            Padding="6,4">
      <Grid ColumnDefinitions="Auto,*,Auto">
        <ToggleButton x:Name="ToolsToggle" Grid.Column="0"
                      IsChecked="False"
                      Content="&#x2630;" ToolTip.Tip="Controls"
                      FontSize="14" Padding="8,5"
                      Background="Transparent" BorderThickness="0"
                      CornerRadius="6" VerticalAlignment="Center" />
        <TextBlock Grid.Column="1" Text="Advanced Features"
                   FontWeight="SemiBold" FontSize="13"
                   Foreground="{StaticResource TextPrimaryBrush}"
                   VerticalAlignment="Center" Margin="8,0" />
        <Border Grid.Column="2" CornerRadius="6" Padding="8,3"
                Background="#F0F9FF" VerticalAlignment="Center">
          <TextBlock Text="{Binding Status}" FontSize="11" Foreground="#1E40AF" />
        </Border>
      </Grid>
    </Border>

    <!-- ════════════ Content: Left Panel + WebView ════════════ -->
    <Grid ColumnDefinitions="Auto,*">

      <!-- Left controls panel (inline, collapsible) -->
      <Border Grid.Column="0" Width="270"
              IsVisible="{Binding #ToolsToggle.IsChecked}"
              Background="White"
              BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderDefaultBrush}">
        <ScrollViewer Margin="10,8">
          <StackPanel Spacing="10">

            <!-- Environment Options -->
            <Border Classes="card" BorderBrush="{StaticResource BrandPrimaryBrush}">
              <StackPanel Spacing="6">
                <TextBlock Text="Environment" Classes="subheading" />
                <TextBlock TextWrapping="Wrap" Classes="caption"
                           Text="Recreates WebView to apply." />
                <Grid ColumnDefinitions="*,*">
                  <Button Grid.Column="0" Content="DevTools"
                          Command="{Binding ApplyDevToolsAndReloadCommand}"
                          HorizontalAlignment="Stretch" Margin="0,0,3,0"
                          CornerRadius="6" Padding="6,6" FontSize="11" />
                  <Button Grid.Column="1" Content="Ephemeral"
                          Command="{Binding ApplyEphemeralAndReloadCommand}"
                          HorizontalAlignment="Stretch" Margin="3,0,0,0"
                          CornerRadius="6" Padding="6,6" FontSize="11" />
                </Grid>
                <TextBox IsReadOnly="True" Classes="mono"
                         Text="{Binding EnvironmentInfo}"
                         MinHeight="36" AcceptsReturn="True" Background="#F8FAFC" FontSize="10" />
              </StackPanel>
            </Border>

            <!-- Custom User-Agent -->
            <Border Classes="card" BorderBrush="{StaticResource BrandAccentBrush}">
              <StackPanel Spacing="6">
                <TextBlock Text="User-Agent" Classes="subheading" />
                <TextBox Classes="mono" FontSize="11"
                         Text="{Binding UserAgentInput, Mode=TwoWay}"
                         Watermark="Custom UA string" />
                <Grid ColumnDefinitions="*,*">
                  <Button Grid.Column="0" Content="Set UA"
                          Command="{Binding SetUserAgentCommand}"
                          HorizontalAlignment="Stretch" Margin="0,0,3,0"
                          CornerRadius="6" Padding="6,6" FontSize="11" />
                  <Button Grid.Column="1" Content="Reset"
                          Command="{Binding ResetUserAgentCommand}"
                          HorizontalAlignment="Stretch" Margin="3,0,0,0"
                          CornerRadius="6" Padding="6,6" FontSize="11" />
                </Grid>
              </StackPanel>
            </Border>

            <!-- WebDialog -->
            <Border Classes="card" BorderBrush="{StaticResource BrandSuccessBrush}">
              <StackPanel Spacing="6">
                <TextBlock Text="WebDialog" Classes="subheading" />
                <TextBox Classes="mono" FontSize="11"
                         Text="{Binding DialogUrl, Mode=TwoWay}"
                         Watermark="URL for dialog" />
                <Button Content="Open Dialog" Classes="primary"
                        Command="{Binding OpenDialogCommand}"
                        HorizontalAlignment="Stretch" FontSize="11" Padding="8,6" />
                <Button Content="Open Ephemeral"
                        Command="{Binding OpenEphemeralDialogCommand}"
                        HorizontalAlignment="Stretch"
                        CornerRadius="6" Padding="8,6" FontSize="11" />
              </StackPanel>
            </Border>

            <!-- AuthFlow -->
            <Border Classes="card" BorderBrush="{StaticResource BrandWarningBrush}">
              <StackPanel Spacing="6">
                <TextBlock Text="AuthFlow (OAuth)" Classes="subheading" />
                <Button Content="Test OAuth" Classes="primary"
                        Command="{Binding TestAuthFlowCommand}"
                        HorizontalAlignment="Stretch" FontSize="11" Padding="8,6" />
                <Button Content="Test Cancel"
                        Command="{Binding TestAuthCancelCommand}"
                        HorizontalAlignment="Stretch"
                        CornerRadius="6" Padding="8,6" FontSize="11" />
                <Border Background="#FFFBEB" CornerRadius="6" Padding="6,4"
                        IsVisible="{Binding AuthResult, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                  <TextBlock Text="{Binding AuthResult}"
                             FontFamily="Menlo,Consolas,monospace" FontSize="10"
                             TextWrapping="Wrap" />
                </Border>
              </StackPanel>
            </Border>

          </StackPanel>
        </ScrollViewer>
      </Border>

      <!-- WebView (fills remaining space) -->
      <Border Grid.Column="1" x:Name="WebViewHost" ClipToBounds="True">
        <agw:WebView x:Name="WebViewControl" Source="https://github.com" />
      </Border>

    </Grid>
  </DockPanel>
</UserControl>
